{
  "openapi": "3.0.3",
  "info": {
    "title": "AniBridge API",
    "version": "2.2.0",
    "description": "AniBridge exposes a Torznab feed and a qBittorrent-compatible API shim for *arr automation. This specification documents the public HTTP endpoints."
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Local development"
    }
  ],
  "tags": [
    {
      "name": "Health",
      "description": "Service status endpoints."
    },
    {
      "name": "Jobs",
      "description": "Queue and job lifecycle endpoints."
    },
    {
      "name": "STRM Proxy",
      "description": "Proxy streaming endpoints used by STRM files."
    },
    {
      "name": "Torznab",
      "description": "Torznab indexer feed endpoints."
    },
    {
      "name": "qBittorrent Auth",
      "description": "Authentication shim endpoints."
    },
    {
      "name": "qBittorrent Torrents",
      "description": "Torrent lifecycle endpoints."
    },
    {
      "name": "qBittorrent Categories",
      "description": "Category management endpoints."
    },
    {
      "name": "qBittorrent Sync",
      "description": "Sync state endpoints."
    },
    {
      "name": "qBittorrent Transfer",
      "description": "Transfer stats endpoints."
    },
    {
      "name": "qBittorrent App",
      "description": "App metadata and preferences endpoints."
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": [
          "Health"
        ],
        "summary": "Health check",
        "operationId": "getHealth",
        "responses": {
          "200": {
            "description": "Service is up.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/downloader/download": {
      "post": {
        "tags": [
          "Jobs"
        ],
        "summary": "Enqueue a direct download job",
        "operationId": "createDownloadJob",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DownloadRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Job accepted.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JobCreateResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/jobs/{job_id}": {
      "get": {
        "tags": [
          "Jobs"
        ],
        "summary": "Get job status",
        "operationId": "getJobStatus",
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Job status.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JobStatus"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "delete": {
        "tags": [
          "Jobs"
        ],
        "summary": "Cancel a job",
        "operationId": "cancelJob",
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cancellation accepted or rejected.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JobCancelResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/jobs/{job_id}/events": {
      "get": {
        "tags": [
          "Jobs"
        ],
        "summary": "Stream job events (SSE)",
        "operationId": "streamJobEvents",
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Server-sent events stream.",
            "content": {
              "text/event-stream": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/strm/stream": {
      "get": {
        "tags": [
          "STRM Proxy"
        ],
        "summary": "Stream a resolved episode (STRM proxy)",
        "operationId": "strmStream",
        "parameters": [
          {
            "name": "site",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Source site identifier (e.g., aniworld.to, s.to, megakino)."
          },
          {
            "name": "slug",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Series or movie slug."
          },
          {
            "name": "s",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Season number."
          },
          {
            "name": "e",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Episode number."
          },
          {
            "name": "lang",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Language label (e.g., German Dub)."
          },
          {
            "name": "provider",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Optional provider hint."
          },
          {
            "name": "sig",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "HMAC signature when STRM_PROXY_AUTH=token."
          },
          {
            "name": "exp",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer"
            },
            "description": "Optional expiry timestamp (seconds) for signed URLs."
          },
          {
            "name": "apikey",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "API key when STRM_PROXY_AUTH=apikey."
          },
          {
            "name": "Range",
            "in": "header",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "HTTP Range header for seeking."
          }
        ],
        "responses": {
          "200": {
            "description": "Streamed bytes or rewritten HLS playlist.",
            "content": {
              "application/vnd.apple.mpegurl": {
                "schema": {
                  "type": "string"
                }
              },
              "application/octet-stream": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "head": {
        "tags": [
          "STRM Proxy"
        ],
        "summary": "Stream metadata (HEAD) for a resolved episode",
        "operationId": "strmStreamHead",
        "parameters": [
          {
            "name": "site",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "slug",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "s",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "e",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "lang",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "provider",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sig",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "exp",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "apikey",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Headers-only response for the upstream stream."
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/strm/proxy": {
      "get": {
        "tags": [
          "STRM Proxy"
        ],
        "summary": "Proxy upstream HLS resources",
        "operationId": "strmProxy",
        "parameters": [
          {
            "name": "u",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Upstream URL to proxy."
          },
          {
            "name": "sig",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apikey",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Range",
            "in": "header",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Streamed bytes or rewritten playlist.",
            "content": {
              "application/vnd.apple.mpegurl": {
                "schema": {
                  "type": "string"
                }
              },
              "application/octet-stream": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "head": {
        "tags": [
          "STRM Proxy"
        ],
        "summary": "Proxy upstream metadata (HEAD)",
        "operationId": "strmProxyHead",
        "parameters": [
          {
            "name": "u",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sig",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apikey",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Headers-only response for the proxied resource."
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/strm/proxy/{path_hint}": {
      "get": {
        "tags": [
          "STRM Proxy"
        ],
        "summary": "Proxy upstream resources with path hints",
        "operationId": "strmProxyWithHint",
        "parameters": [
          {
            "name": "path_hint",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Path hint used to preserve file extensions."
          },
          {
            "name": "u",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sig",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apikey",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Range",
            "in": "header",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Streamed bytes or rewritten playlist.",
            "content": {
              "application/vnd.apple.mpegurl": {
                "schema": {
                  "type": "string"
                }
              },
              "application/octet-stream": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "head": {
        "tags": [
          "STRM Proxy"
        ],
        "summary": "Proxy upstream metadata (HEAD) with path hints",
        "operationId": "strmProxyWithHintHead",
        "parameters": [
          {
            "name": "path_hint",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "u",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sig",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "apikey",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Headers-only response for the proxied resource."
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/torznab/api": {
      "get": {
        "tags": [
          "Torznab"
        ],
        "summary": "Torznab query (caps, search, tvsearch, movie)",
        "operationId": "torznabQuery",
        "parameters": [
          {
            "name": "t",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "caps",
                "search",
                "tvsearch",
                "movie",
                "movie-search"
              ]
            },
            "description": "Operation type."
          },
          {
            "name": "apikey",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Required when INDEXER_API_KEY is set."
          },
          {
            "name": "q",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Query string (search/tvsearch)."
          },
          {
            "name": "season",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 0
            },
            "description": "Season number (tvsearch)."
          },
          {
            "name": "ep",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 0
            },
            "description": "Episode number (tvsearch)."
          },
          {
            "name": "tvdbid",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer"
            },
            "description": "Optional TVDB ID hint."
          },
          {
            "name": "tmdbid",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer"
            },
            "description": "Optional TMDB ID hint."
          },
          {
            "name": "imdbid",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Optional IMDb ID hint."
          },
          {
            "name": "rid",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer"
            },
            "description": "Optional Rage ID hint."
          },
          {
            "name": "tvmazeid",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer"
            },
            "description": "Optional TVMaze ID hint."
          },
          {
            "name": "cat",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Optional category filter (for example 5070/2000)."
          },
          {
            "name": "offset",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0
            },
            "description": "Result offset."
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 50
            },
            "description": "Maximum number of results."
          }
        ],
        "responses": {
          "200": {
            "description": "Torznab XML response.",
            "content": {
              "application/xml": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      }
    },
    "/api/v2/auth/login": {
      "post": {
        "tags": [
          "qBittorrent Auth"
        ],
        "summary": "Login (stubbed)",
        "operationId": "qbittorrentLogin",
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Always succeeds and sets a SID cookie.",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/api/v2/auth/logout": {
      "post": {
        "tags": [
          "qBittorrent Auth"
        ],
        "summary": "Logout",
        "operationId": "qbittorrentLogout",
        "responses": {
          "200": {
            "description": "Logout acknowledged.",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/api/v2/torrents/add": {
      "post": {
        "tags": [
          "qBittorrent Torrents"
        ],
        "summary": "Add torrent(s)",
        "operationId": "qbittorrentAddTorrents",
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "urls": {
                    "type": "string",
                    "description": "One or more magnet URLs separated by newlines."
                  },
                  "category": {
                    "type": "string"
                  },
                  "savepath": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Enqueued.",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        },
        "security": [
          {
            "cookieAuth": []
          }
        ]
      }
    },
    "/api/v2/torrents/info": {
      "get": {
        "tags": [
          "qBittorrent Torrents"
        ],
        "summary": "List torrents",
        "operationId": "qbittorrentListTorrents",
        "parameters": [
          {
            "name": "category",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of torrents.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TorrentInfo"
                  },
                  "maxItems": 1000
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        },
        "security": [
          {
            "cookieAuth": []
          }
        ]
      }
    },
    "/api/v2/torrents/files": {
      "get": {
        "tags": [
          "qBittorrent Torrents"
        ],
        "summary": "List torrent files",
        "operationId": "qbittorrentTorrentFiles",
        "parameters": [
          {
            "name": "hash",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
