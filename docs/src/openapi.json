  "components": {
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "ok"
          }
        },
        "required": [
          "status"
        ]
      },
      "DownloadRequest": {
        "type": "object",
        "properties": {
          "slug": {
            "type": "string"
          },
          "season": {
            "type": "integer",
            "minimum": 0
          },
          "episode": {
            "type": "integer",
            "minimum": 0
          },
          "language": {
            "type": "string"
          },
          "link": {
            "type": "string"
          },
          "provider": {
            "type": "string"
          },
          "title_hint": {
            "type": "string"
          }
        },
        "description": "Request to enqueue a download job.",
        "anyOf": [
          {
            "required": [
              "slug",
              "season",
              "episode",
              "language"
            ],
            "description": "Search-based download"
          },
          {
            "required": [
              "link"
            ],
            "description": "Direct link download"
          }
        ]
      },
      "JobCreateResponse": {
        "type": "object",
        "properties": {
          "job_id": {
            "type": "string"
          }
        },
        "required": [
          "job_id"
        ]
      },
      "JobStatus": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "queued",
              "downloading",
              "completed",
              "failed",
              "cancelled"
            ]
          },
          "progress": {
            "type": "number",
            "format": "float"
          },
          "downloaded_bytes": {
            "type": "integer",
            "format": "int64"
          },
          "total_bytes": {
            "type": "integer",
            "format": "int64"
          },
          "speed": {
            "type": "integer",
            "format": "int64"
          },
          "eta": {
            "type": "integer",
            "format": "int64"
          },
          "message": {
            "type": "string",
            "nullable": true
          },
          "result_path": {
            "type": "string",
            "nullable": true
          }
        },
        "required": [
          "id",
          "status",
          "progress"
        ]
      },
      "JobCancelResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "cancelling",
              "not-running"
            ]
          }
        },
        "required": [
          "status"
        ]
      },
      "TorrentInfo": {
        "type": "object",
        "properties": {
          "hash": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "progress": {
            "type": "number",
            "format": "float"
          },
          "state": {
            "type": "string"
          },
          "size": {
            "type": "integer",
            "format": "int64"
          },
          "save_path": {
            "type": "string"
          },
          "content_path": {
            "type": "string"
          },
          "added_on": {
            "type": "integer",
            "format": "int64"
          },
          "completion_on": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "TorrentFile": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "size": {
            "type": "integer",
            "format": "int64"
          },
          "progress": {
            "type": "number",
            "format": "float"
          }
        }
      },
      "TorrentProperties": {
        "type": "object",
        "properties": {
          "save_path": {
            "type": "string"
          },
          "total_size": {
            "type": "integer",
            "format": "int64"
          },
          "comment": {
            "type": "string"
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "savePath": {
            "type": "string"
          }
        }
      },
      "CategoryMap": {
        "type": "object",
        "additionalProperties": {
          "$ref": "#/components/schemas/Category"
        }
      },
      "SyncMainData": {
        "type": "object",
        "properties": {
          "torrents": {
            "type": "object"
          },
          "categories": {
            "$ref": "#/components/schemas/CategoryMap"
          },
          "server_state": {
            "type": "object"
          }
        }
      },
      "TransferInfo": {
        "type": "object",
        "properties": {
          "dl_info_speed": {
            "type": "integer",
            "format": "int64"
          },
          "up_info_speed": {
            "type": "integer",
            "format": "int64"
          },
          "dl_info_data": {
            "type": "integer",
            "format": "int64"
          },
          "up_info_data": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "AppBuildInfo": {
        "type": "object",
        "properties": {
          "qt": {
            "type": "string"
          },
          "libtorrent": {
            "type": "string"
          },
          "boost": {
            "type": "string"
          }
        }
      },
      "AppPreferences": {
        "type": "object",
        "properties": {
          "save_path": {
            "type": "string"
          },
          "temp_path_enabled": {
            "type": "boolean"
          },
          "temp_path": {
            "type": "string"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "detail": {
            "type": "string"
          }
        },
        "required": [
          "detail"
        ]
      }
    },
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "SID",
        "description": "Session cookie set by /api/v2/auth/login"
      },
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "query",
        "name": "apikey",
        "description": "API key for Torznab endpoints (when INDEXER_API_KEY is configured)"
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Bad Request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      },
      "Unauthorized": {
        "description": "Unauthorized",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      },
      "NotFound": {
        "description": "Not Found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      },
      "ServerError": {
        "description": "Internal Server Error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      }
    }
  }
